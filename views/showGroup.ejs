<% layout('layout/boilerplate.ejs') %>

    <div id="loadingOverlay" class="fixed top-0 left-0 w-full h-full flex justify-center items-center z-50 bg-gray-900 bg-opacity-50 hidden">
        <div class="spinner"></div>
    </div>

    <div class="bg-gray-900 text-gray-200 min-h-screen">
        <div class="container mx-auto px-4 py-8">
            <% const members = group.members.map(m => JSON.parse(m)) %>
                <div class="flex flex-col md:flex-row md:space-x-8 items-center justify-between mb-8">
                    <div class="w-full md:w-1/2 flex items-center">
                        <h1 class="text-4xl font-bold text-teal-400">
                            <%= group.title %>
                        </h1>
                        <p class="text-lg text-gray-400 font-medium ml-4">Owned by:
                            <%= group.author %>
                        </p>
                    </div>
                    <div class="flex items-center md:justify-end space-x-4">
                        <% if (members.some(member => member.name === currentUser.name) || group.author === currentUser.name) { %>
                            <a href="/<%= group.roomid %>">
                                <button class="bg-teal-500 hover:bg-teal-600 text-white py-2 px-4 rounded-md transition duration-300 ease-in-out">
                            Join Room
                        </button>
                            </a>
                            <% } %>
                    </div>
                </div>

                <!-- Show Attendance Button -->
                <div class="mb-8">
                    <a href="/<%= group.id %>/attendance" class="bg-red-500 hover:bg-red-600 text-white py-3 px-6 rounded-md transition duration-300 ease-in-out">
                Show Attendance
            </a>
                </div>

                <% if (currentUser.name === group.author) { %>
                    <div class="flex flex-col md:flex-row items-center justify-between mb-8">
                        <form id="addUserForm" action="/group/<%= group.id %>" novalidate class="validated-form bg-gray-800 shadow-md rounded-lg p-4 w-full md:w-1/2 md:self-center md:mr-4 relative" method="post">
                            <h2 class="text-xl font-semibold mb-4">ADD USER</h2>
                            <div class="flex items-center space-x-2">
                                <input type="text" class="border border-gray-600 rounded-l-md focus:outline-none focus:border-teal-500 focus:ring focus:ring-teal-200 focus:ring-opacity-50 block w-full sm:text-sm p-2 text-gray-300 bg-gray-700" name="name" required id="name" placeholder="Enter username">
                                <button class="bg-teal-500 hover:bg-teal-600 text-white py-2 px-4 rounded-r-md transition duration-300 ease-in-out" type="submit" id="addUserBtn">Add</button>
                                <!-- Loading Spinner Animation -->
                                <div id="addUserLoading" class="absolute inset-y-0 right-0 flex items-center pr-3 hidden">
                                    <div class="spinner w-6 h-6 border-t-2 border-b-2 border-white mr-3"></div>
                                    <p class="text-gray-400 text-sm">Adding...</p>
                                </div>
                            </div>
                        </form>
                        <form id="uploadImageForm" action="/<%= group.id %>/searchface" method="post" enctype="multipart/form-data" class="bg-gray-800 shadow-md rounded-lg p-8 w-full md:w-1/2 md:ml-4 relative" id="uploadForm">
                            <label for="image" class="block text-gray-400 font-bold mb-2">Upload Profile Photo</label>
                            <div class="relative border-dashed border-2 border-gray-500 rounded-md p-4">
                                <input type="file" class="hidden" name="image" id="image" accept="image/*" onchange="displayImagePreview(this)">
                                <label for="image" class="cursor-pointer text-teal-400 hover:text-teal-500 transition duration-300 ease-in-out">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6 mx-auto">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                            </svg>
                            <span class="text-xs" id="file-label">Choose a file</span>
                        </label>
                                <div id="image-preview" class="mt-2 flex items-center space-x-2"></div>
                            </div>
                            <input type="hidden" name="members" value="<%= nameList %>">
                            <button type="submit" class="bg-teal-500 hover:bg-teal-600 text-white py-2 px-4 rounded-md transition duration-300 ease-in-out w-full mt-4" id="uploadButton">
                        Upload
                    </button>
                            <!-- Loading Spinner Animation -->
                            <div id="uploadLoading" class="absolute inset-y-0 right-0 flex items-center pr-3 hidden">
                                <div class="spinner w-6 h-6 border-t-2 border-b-2 border-white mr-3"></div>
                                <p class="text-gray-400 text-sm">Uploading...</p>
                            </div>
                        </form>
                    </div>
                    <% } %>

                        <div>
                            <h4 class="text-2xl font-semibold mb-4">Members</h4>
                            <div class="grid grid-cols-3 gap-4">
                                <% for (let member of members) { %>
                                    <div class="bg-gray-800 rounded-md p-4 shadow-md hover:shadow-lg transition duration-300 ease-in-out flex items-center space-x-4">
                                        <img src="<%= member.image %>" alt="User Image" class="rounded-full w-24 h-24">
                                        <div>
                                            <p class="text-lg font-semibold text-gray-300">
                                                <%= member.name %>
                                            </p>
                                            <p class="text-gray-400" style="text-shadow: 0 0 5px rgba(0, 0, 0, 0.5);">
                                                <%= member.email %>
                                            </p>
                                            <!-- Add additional member information or actions here -->
                                        </div>
                                    </div>
                                    <% } %>
                            </div>
                        </div>

        </div>
    </div>

    <!-- Loading Spinner Animation -->
    <style>
        .spinner {
            border: 2px solid transparent;
            border-top-color: white;
            border-bottom-color: white;
            border-radius: 50%;
            width: 1rem;
            height: 1rem;
            animation: spinner-spin 0.75s linear infinite;
        }
        
        @keyframes spinner-spin {
            to {
                transform: rotate(360deg);
            }
        }
        /* Hide the scrollbar while loading */
        
        body.loading {
            overflow: hidden;
        }
    </style>

    <script>
        // Show loading overlay
        function showLoading() {
            document.getElementById('loadingOverlay').classList.remove('hidden');
            document.body.classList.add('loading'); // Hide scrollbar
        }

        // Hide loading overlay
        function hideLoading() {
            document.getElementById('loadingOverlay').classList.add('hidden');
            document.body.classList.remove('loading'); // Show scrollbar
        }

        // Display file name on selection
        function displayImagePreview(input) {
            const fileName = input.files[0].name;
            document.getElementById('file-label').textContent = fileName;
        }

        // Show loading animation on form submission
        document.getElementById('addUserForm').addEventListener('submit', function() {
            showLoading();
        });

        document.getElementById('uploadImageForm').addEventListener('submit', function() {
            showLoading();
        });

        // Example: Hide loading after some delay (replace this with your actual loading logic)
        setTimeout(hideLoading, 3000); // Hide loading after 3 seconds (example)
    </script>