<% layout('layout/boilerplate.ejs') %>

    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-gray-800 to-gray-900 py-16 text-white text-center">
        <div class="container mx-auto">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-semibold mb-4">ConvoLink</h1>
            <p class="text-lg md:text-xl lg:text-2xl mb-6">Seamless Meetings. Anytime, Anywhere.</p>
            <a href="#" class="bg-teal-600 text-white px-6 py-3 rounded-full inline-block hover:bg-teal-700">Join a Meeting</a>
        </div>
    </section>

    <!-- Features and Call to Action Section -->
    <div class="flex justify-between bg-gray-900 py-16 text-white pl-8">
        <!-- Features Section -->
        <section class="w-1/2 mr-4">
            <div class="container mx-auto">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <!-- Feature 1 -->
                    <div class="p-4 md:p-6 bg-gray-800 rounded-lg shadow-md">
                        <div class="text-2xl md:text-3xl text-teal-600 mb-4">
                            <i class="fas fa-video"></i>
                        </div>
                        <h3 class="text-lg md:text-xl lg:text-2xl font-semibold mb-2">Video Conferencing</h3>
                        <p class="text-sm md:text-base text-gray-400">Connect with others through high-quality video calls.</p>
                    </div>
                    <!-- Feature 2 -->
                    <div class="p-4 md:p-6 bg-gray-800 rounded-lg shadow-md">
                        <div class="text-2xl md:text-3xl text-teal-600 mb-4">
                            <i class="fas fa-network-wired"></i>
                        </div>
                        <h3 class="text-lg md:text-xl lg:text-2xl font-semibold mb-2">Network Stability</h3>
                        <p class="text-sm md:text-base text-gray-400">Enjoy reliable network stability ensuring uninterrupted video calls.</p>
                    </div>
                    <!-- Feature 3 -->
                    <div class="p-4 md:p-6 bg-gray-800 rounded-lg shadow-md">
                        <div class="text-2xl md:text-3xl text-teal-600 mb-4">
                            <i class="fas fa-desktop"></i>
                        </div>
                        <h3 class="text-lg md:text-xl lg:text-2xl font-semibold mb-2">Screen Sharing</h3>
                        <p class="text-sm md:text-base text-gray-400">Share your screen to collaborate seamlessly with others.</p>
                    </div>
                    <!-- New Feature (Classroom Attendance) -->
                    <div class="p-4 md:p-6 bg-gray-800 rounded-lg shadow-md">
                        <div class="text-2xl md:text-3xl text-teal-600 mb-4">
                            <i class="fas fa-chalkboard-teacher"></i>
                        </div>
                        <h3 class="text-lg md:text-xl lg:text-2xl font-semibold mb-2">Classroom Attendance</h3>
                        <p class="text-sm md:text-base text-gray-400">Manage classroom attendance alongside virtual meetings.</p>
                        <a href="#" class="text-teal-600 font-semibold hover:text-teal-400">Learn More</a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Call to Action Section -->
        <section class="w-1/2 bg-gradient-to-r from-gray-800 to-gray-900 py-12 md:py-16 text-center ml-4">
            <div class="container mx-auto">
                <h2 class="text-2xl md:text-3xl lg:text-4xl font-semibold mb-6">Ready to get started?</h2>
                <p class="text-base md:text-lg lg:text-xl mb-8">Join ConvoLink now and experience seamless video conferencing.</p>
                <div class="flex justify-center">
                    <button id="open-modal" class="bg-teal-600 text-white px-8 py-3 rounded-full inline-block hover:bg-teal-700">Get Started</button>
                </div>
            </div>
        </section>
    </div>

    <!-- Signup and Login Modal -->
    <div id="signup-login-modal" class="fixed top-0 left-0 w-full h-full bg-gray-900 bg-opacity-75 flex justify-center items-center z-50 hidden">
        <div class="bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-3xl font-semibold mb-4">Welcome to ConvoLink!</h2>
            <p class="text-lg mb-4">Sign up or log in to start connecting.</p>
            <div class="flex justify-center">
                <a href="/sign-up" class="bg-teal-600 text-white px-8 py-3 rounded-full inline-block mr-4 hover:bg-teal-700">Sign Up</a>
                <a href="/sign-in" class="bg-teal-600 text-white px-8 py-3 rounded-full inline-block hover:bg-teal-700">Sign In</a>
            </div>
            <button id="close-modal" class="absolute top-0 right-0 mt-4 mr-4 text-gray-500 hover:text-gray-800 focus:outline-none">
            <i class="fas fa-times"></i>
        </button>
        </div>
    </div>

    <!-- Footer Section -->
    <footer class="bg-gray-800 text-white py-8">
        <div class="container mx-auto text-center">
            <p>&copy; 2023 ConvoLink. All rights reserved.</p>
            <div class="mt-4">
                <a href="#" class="text-white mr-4"><i class="fab fa-facebook"></i></a>
                <a href="#" class="text-white mr-4"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-white"><i class="fab fa-linkedin"></i></a>
            </div>
        </div>
    </footer>

    <script>
        // JavaScript to handle modal opening and closing
        const openModalButton = document.getElementById('open-modal');
        const closeModalButton = document.getElementById('close-modal');
        const modal = document.getElementById('signup-login-modal');

        openModalButton.addEventListener('click', function() {
            modal.classList.remove('hidden');
        });

        closeModalButton.addEventListener('click', function() {
            modal.classList.add('hidden');
        });
    </script>