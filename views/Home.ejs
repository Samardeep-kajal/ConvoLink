<!-- Hero Section -->
<section class="bg-blue-500 py-16 text-white text-center">
  <div class="container mx-auto">
    <h1 class="text-6xl font-bold">ConvoLink</h1>
    <p class="text-lg mt-4">Join meetings seamlessly with ConvoLink.</p>
    <a
      href="/videoRoom"
      class="bg-sky-700 text-white px-6 py-3 rounded-full mt-6 inline-block hover:bg-sky-600"
      >Join a Meeting</a
    >
  </div>
</section>

<!-- Features Section -->
<section class="py-12">
  <div class="container mx-auto text-center">
    <h2 class="text-4xl font-semibold mb-6">Features</h2>
    <div class="flex flex-wrap justify-center gap-8">
      <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4">
        <div class="bg-white p-4 rounded-lg shadow">
          <div class="text-3xl text-sky-700 mb-2">
            <i class="fas fa-video"></i>
          </div>
          <h3 class="text-xl font-semibold">Video Conferencing</h3>
          <p class="text-gray-600">
            Connect with others through high-quality video calls.
          </p>
        </div>
      </div>
      <!-- Add similar feature blocks for other features -->
    </div>
  </div>
</section>

<!-- Call to Action -->
<section class="bg-gray-100 py-16">
  <div class="container mx-auto text-center">
    <h2 class="text-4xl font-semibold mb-6">Ready to get started?</h2>
    <p class="text-gray-600">
      Join ConvoLink now and experience seamless video conferencing.
    </p>
    <!-- Call-to-action button -->
    <div class="mt-8">
      <a
        href="/sign-up"
        class="bg-sky-700 text-white px-8 py-4 rounded-full mr-3 hover:bg-sky-600"
        >Sign Up</a
      >OR
      <a
        href="/sign-in"
        class="bg-sky-700 text-white px-8 py-4 rounded-full ml-2 hover:bg-sky-600"
        >Sign In</a
      >
    </div>
  </div>
</section>

