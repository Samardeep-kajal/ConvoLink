<% layout('layout/boilerplate.ejs') %>

    <body class="bg-gray-900 text-gray-200">
        <div class="mx-auto">
            <h1 class="text-center text-3xl font-bold my-6">Create Group</h1>

            <div class="max-w-md mx-auto bg-gray-800 p-8 rounded-md shadow-md">
                <form action="/group/create" novalidate class="validated-form" method="post">
                    <div class="mb-6">
                        <label class="block text-sm font-semibold text-gray-400" for="title">Group Name</label>
                        <input type="text" class="mt-1 p-2 w-full border border-gray-600 rounded-md bg-gray-700 text-gray-200" name="title" required id="title" placeholder="Enter the group name">
                        <div class="text-xs text-red-500 mt-1">
                            * Required
                        </div>
                    </div>

                    <div class="flex items-center justify-between">
                        <button class="bg-teal-500 text-white px-4 py-2 rounded-md hover:bg-teal-600" type="submit">Create Group</button>
                        <a href="/" class="text-gray-400 hover:underline">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </body>